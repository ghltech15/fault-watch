# fault.watch Environment Variables
# Copy this file to .env and fill in values

# ============================================
# DATABASE
# ============================================

# New Postgres event store
DATABASE_URL=postgresql://faultwatch:faultwatch_dev@localhost:5432/faultwatch_events

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379/0

# ============================================
# EXISTING SUPABASE (auth/user data)
# ============================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# ============================================
# API KEYS
# ============================================

# FRED (Federal Reserve Economic Data)
# Get key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your-fred-api-key

# Finnhub (market data)
# Get key at: https://finnhub.io/register
FINNHUB_API_KEY=your-finnhub-key

# SEC requires user agent for EDGAR
SEC_USER_AGENT="FaultWatch/2.0 (your-email@example.com)"

# ============================================
# SOCIAL APIs (optional)
# ============================================

# Reddit API (optional - for deeper social monitoring)
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your-client-id
REDDIT_CLIENT_SECRET=your-client-secret
REDDIT_USER_AGENT="FaultWatch/2.0 by /u/your-username"

# Twitter/X API (optional)
TWITTER_BEARER_TOKEN=your-bearer-token

# ============================================
# DEPLOYMENT
# ============================================

# API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Environment
ENVIRONMENT=development  # development | staging | production

# ============================================
# ALERTS (optional)
# ============================================

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# Telegram bot for alerts
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Email alerts (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=alerts@example.com
