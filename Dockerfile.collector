# fault.watch Collector Worker - Scheduled Data Collection Jobs
FROM python:3.11-slim

WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install APScheduler for job scheduling
RUN pip install --no-cache-dir apscheduler>=3.10.0

# Copy application code
COPY services/ ./services/
COPY packages/ ./packages/
COPY db/ ./db/

# Run collector worker
CMD ["python", "-m", "services.collector.runner"]
